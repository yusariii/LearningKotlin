<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#E0E0E0"
        android:gravity="end|center_vertical"
        android:padding="16dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="48sp"
        tools:ignore="HardcodedText" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            tools:ignore="NestedWeights">

            <Button
                style="@style/CalcButton"
                android:text="CE"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="C" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="BS" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />

            <Button
                style="@style/CalcButton"
                android:hapticFeedbackEnabled="false"
                android:text="/"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:text="7" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="8" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="9" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="x" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:text="4" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="5" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="6" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="-" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:text="1" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="2" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="3" style="@style/CalcButtonNumber"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
            <Button android:text="+" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button android:text="+/-" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />

            <Button
                style="@style/CalcButtonNumber"
                android:text="0"
                tools:ignore="HardcodedText,DuplicateSpeakableTextCheck,VisualLintButtonSize" />
            <Button android:text="=" style="@style/CalcButton"
                tools:ignore="HardcodedText,VisualLintButtonSize" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
